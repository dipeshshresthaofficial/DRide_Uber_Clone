<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:text="MANAGE YOUR PROFILE HERE"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/name"
            android:background="#fff"
            android:textStyle="italic"
            android:hint="ENTER USER NAME"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/phoneNo"
            android:background="#fff"
            android:textStyle="italic"
            android:hint="ENTER USER PHONE NUMBER"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/address"
            android:textStyle="italic"
            android:background="#fff"
            android:hint="ENTER USER ADDRESS"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_location_city_black_24dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/country"
            android:textStyle="italic"
            android:background="#fff"
            android:hint="ENTER USER COUNTRY NAME"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_account_box_black_24dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/date"
            android:textStyle="italic"
            android:background="#fff"
            android:hint="ENTER USER DOB"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/updateProfile"
            android:textStyle="italic"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn_round"
            android:drawableLeft="@drawable/ic_details_black_24dp"
            android:text="UPDATE USER DETAILS" />

